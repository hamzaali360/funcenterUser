<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/picture1"
        android:layout_width="182dp"
        android:layout_height="58dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:text="HRS Train Picture"
        app:layout_constraintBottom_toTopOf="@+id/picture2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/picture2"
        android:layout_width="182dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:text="HRS Trailer Picture"
        app:layout_constraintBottom_toTopOf="@+id/picture3"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/playAndPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/song1"
        app:layout_constraintEnd_toStartOf="@+id/stop"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@android:drawable/ic_media_play" />

    <Button
        android:id="@+id/song1"
        android:layout_width="185dp"
        android:layout_height="57dp"
        android:layout_marginBottom="12dp"
        android:text="HRS Train Song"
        app:layout_constraintBottom_toTopOf="@+id/song2"
        app:layout_constraintEnd_toStartOf="@+id/picture1"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stop"
        android:layout_width="46dp"
        android:layout_height="51dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="24dp"
        android:background="#FF1D00"
        app:layout_constraintBottom_toTopOf="@+id/picture1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/song2"
        android:layout_width="182dp"
        android:layout_height="55dp"
        android:layout_marginBottom="12dp"
        android:text="HRS Trailer Song"

        app:layout_constraintBottom_toTopOf="@+id/song3"
        app:layout_constraintEnd_toStartOf="@+id/picture2"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/picture3"
        android:layout_width="180dp"
        android:layout_height="49dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:text="Zelda Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/song3"
        android:layout_width="181dp"
        android:layout_height="51dp"
        android:layout_marginBottom="36dp"
        android:text="Zelda Song"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/picture2"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="370dp"
        android:layout_height="261dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>